{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "types": ["@types/node"],
    "noEmit": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src"]
}
