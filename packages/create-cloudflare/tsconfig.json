{
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "lib": ["esnext"],
    "target": "esnext",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "strictFunctionTypes": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "module": "esnext",
    "checkJs": true,
    "noEmit": true,
    "paths": {
      "create-cloudflare": ["./src/index.d.ts"]
    }
  },
  "include": [
    "bin.js",
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
