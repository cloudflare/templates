{
	"preset": "ts-jest/presets/default-esm",
	"globals": {
		"ts-jest": {
			"tsconfig": "./tsconfig.json",
			"useESM": true
		}
	},
	"transform": {
		"^.+\\.(t|j)sx?$": "ts-jest"
	},
	"testRegex": "/test/.*\\.test\\.ts$",
	"testEnvironment": "miniflare",
	"testEnvironmentOptions": {
		"scriptPath": "./src/index.ts",
		"modules": true
	},
	"collectCoverageFrom": ["src/**/*.{ts,tsx}"]
}
